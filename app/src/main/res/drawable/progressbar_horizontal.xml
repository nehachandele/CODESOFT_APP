<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="#88D5E8" /> <!-- Background color of the progress bar -->
            <corners android:radius="5dp" /> <!-- Adjust corner radius as needed -->
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="#1F6BE1" /> <!-- Progress color of the progress bar -->
                <corners android:radius="5dp" /> <!-- Adjust corner radius as needed -->
            </shape>
        </clip>
    </item>
</layer-list>